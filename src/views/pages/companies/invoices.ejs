<%- include('../../partials/doctype.ejs') %>

<head>
    <%- include('../../partials/header') %>
    <title><%= page.display %> - <%= app.name %></title>
    <%- include('../../partials/theme_css') %>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <% if(page.name != 'login' && page.name != '404') { %>
            <%- include('../../partials/sidebar') %>
            <% } %>
            <!-- / Menu -->

            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                <% if(page.name != 'login' && page.name != '404') { %>
                <%- include('../../partials/navbar') %>
                <% } %>
                <!-- / Navbar -->

                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="card">
                            <div class="card-header header-elements">
                                <h5 class="m-0 me-2"><%= data.company.short_name %> faturaları</h5>
                                <div class="card-header-elements ms-auto">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="col-12">
                                    <div class="row justify-content-end">
                                        <div class="col-md-3 col-12 mb-2 d-grid">
                                            <button id="search" type="button" class="btn btn-label-success waves-effect">
                                                <i class="fa-regular fa-file-lines me-1"></i> Muhasebeleştir
                                            </button>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 col-12 mb-md-4 mb-1">
                                            <label for="searchbox" class="form-label">Ara</label>
                                            <div class="input-group input-group-merge">
                                                <span class="input-group-text" id="searchboxspan"><i class="ti ti-search"></i></span>
                                                <input id="searchbox" type="text" class="form-control" placeholder="Ara..." aria-label="Ara..." aria-describedby="searchboxspan">
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-6 mb-md-4 mb-1">
                                            <label for="start-date" class="form-label">Başlangıç Tarihi</label>
                                            <div class="input-group">
                                                <button class="btn btn-icon btn-label-linkedin waves-effect" type="button" id="previous-month">
                                                    <i class="fa-solid fa-angles-left"></i>
                                                </button>
                                                <input type="text" class="form-control flatpickr-input" id="start-date">
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-6 mb-md-4 mb-1">
                                            <label for="end-date" class="form-label">Bitiş Tarihi</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control flatpickr-input" id="end-date">
                                                <button class="btn btn-icon btn-label-linkedin waves-effect" type="button" id="next-month">
                                                    <i class="fa-solid fa-angles-right"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="col-md-1 col-12 mb-md-4 mb-3 mx-auto d-grid">
                                            <button id="search" type="button" class="btn btn-primary waves-effect mt-md-4 mt-3">
                                                <i class="tf-icons ti ti-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div id="companies-invoices-table" style="width: 100%; height: 600px;" class="ag-theme-quartz"></div>
                            </div>
                        </div>
                    </div>
                    <!-- / Content -->
                    <!-- Footer -->
                    <%- include('../../partials/footer') %>
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    <%- include('../../partials/theme_js') %>
</body>

</html>
