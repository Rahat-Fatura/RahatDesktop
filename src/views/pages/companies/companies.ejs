<%- include('../../partials/doctype.ejs') %>

<head>
    <%- include('../../partials/header') %>
    <title><%= page.display %> - <%= app.name %></title>
    <%- include('../../partials/theme_css') %>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <% if(page.name != 'login' && page.name != '404') { %>
            <%- include('../../partials/sidebar') %>
            <% } %>
            <!-- / Menu -->

            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                <% if(page.name != 'login' && page.name != '404') { %>
                <%- include('../../partials/navbar') %>
                <% } %>
                <!-- / Navbar -->

                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="card">
                            <div class="card-header header-elements">
                                <h5 class="m-0 me-2">Mükellefler</h5>
                                <div class="card-header-elements ms-auto">
                                    <% if(rights.includes('companies.create')) {  %>
                                    <button type="button" class="btn btn-sm btn-success waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#addNewCompany">
                                        <span class="tf-icon ti ti-plus ti-xs me-1"></span>Yeni Firma Ekle
                                    </button>
                                    <div class="modal fade" id="addNewCompany" data-bs-backdrop="static" tabindex="-1" style="display: none;" aria-hidden="true">
                                        <div class="modal-dialog modal-lg modal-simple modal-edit-user">
                                            <div class="modal-content p-3 p-md-5">
                                                <div class="modal-body">
                                                    <div class="text-center mb-4">
                                                        <h3 class="mb-2">Yeni Firma Ekle</h3>
                                                    </div>
                                                    <form id="addNewCompanyForm" class="row g-3 fv-plugins-bootstrap5 fv-plugins-framework" onsubmit="return false" novalidate="novalidate">
                                                        <div class="col-12 fv-plugins-icon-container">
                                                            <label class="form-label" for="modalCompanyName">Ünvan</label>
                                                            <input type="text" id="modalCompanyName" name="modalCompanyName" class="form-control">
                                                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                                        </div>
                                                        <div class="col-12 col-md-6 fv-plugins-icon-container">
                                                            <label class="form-label" for="modalCompanyTaxNumber">Vergi/TC Kimlik No</label>
                                                            <input type="text" id="modalCompanyTaxNumber" name="modalCompanyTaxNumber" class="form-control">
                                                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                                        </div>
                                                        <div class="col-12 col-md-6 fv-plugins-icon-container">
                                                            <label class="form-label" for="modalCompanyTaxOffice">Vergi Dairesi</label>
                                                            <input type="text" id="modalCompanyTaxOffice" name="modalCompanyTaxOffice" class="form-control">
                                                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                                        </div>
                                                        <div class="col-12 fv-plugins-icon-container">
                                                            <label class="form-label" for="modalCompanyAddress">Adres</label>
                                                            <input type="text" id="modalCompanyAddress" name="modalCompanyAddress" class="form-control">
                                                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                                        </div>
                                                        <div class="col-12 col-md-6 fv-plugins-icon-container">
                                                            <label class="form-label" for="modalCompanyCity">İl</label>
                                                            <input type="text" id="modalCompanyCity" name="modalCompanyCity" class="form-control">
                                                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                                        </div>
                                                        <div class="col-12 col-md-6 fv-plugins-icon-container">
                                                            <label class="form-label" for="modalCompanyCountry">Ülke</label>
                                                            <input type="text" id="modalCompanyCountry" name="modalCompanyCountry" class="form-control" value="Türkiye">
                                                            <div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
                                                        </div>
                                                        <div class="col-12 col-md-6">
                                                            <label class="form-label" for="modalCompanyMail">e-Posta Adresi</label>
                                                            <input type="text" id="modalCompanyMail" name="modalCompanyMail" class="form-control" placeholder="ornek@mail.com">
                                                        </div>
                                                        <div class="col-12 col-md-6">
                                                            <label class="form-label" for="modalCompanyPhone">Telefon Numarası</label>
                                                            <div class="input-group">
                                                                <span class="input-group-text">TR (+90)</span>
                                                                <input type="text" id="modalCompanyPhone" name="modalCompanyPhone" class="form-control phone-number-mask" placeholder="555 444 5544">
                                                            </div>
                                                        </div>
                                                        <div class="col-12 text-center">
                                                            <button type="submit" class="btn btn-primary me-sm-3 me-1 waves-effect waves-light">Kaydet</button>
                                                            <button type="reset" class="btn btn-label-secondary waves-effect" data-bs-dismiss="modal" aria-label="Close">
                                                                İptal
                                                            </button>
                                                        </div>
                                                        <input type="hidden">
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card-body">
                                <div id="companies-table" style="width: 100%; height: 600px;" class="ag-theme-quartz"></div>
                            </div>
                        </div>
                    </div>
                    <!-- / Content -->
                    <!-- Footer -->
                    <%- include('../../partials/footer') %>
                    <!-- / Footer -->
                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>
        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
    <%- include('../../partials/theme_js') %>
</body>

</html>
